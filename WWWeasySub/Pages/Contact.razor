@page "/contact"
@layout MainLayout

<MudPaper Class="p-6 mt-4 mx-auto max-w-2xl" Elevation="4" style="background-color:white;">
    <MudText Typo="Typo.h4" Class="mb-4">Contact</MudText>

    <MudText Typo="Typo.body1" Class="mb-4">
        Une question, un souci avec votre commande ou besoin d’assistance ? Contactez-nous :
    </MudText>

    <MudGrid>
        <MudItem xs="12" sm="6">
            <MudIcon Icon="@Icons.Material.Filled.Email" Class="mr-2" />
            <MudLink Href="mailto:sva.records.o@gmail.com">sva.records.o@gmail.com</MudLink>
        </MudItem>
    </MudGrid>

    <MudText Typo="Typo.caption" Class="mt-6">
        Nous répondons généralement sous 24h.
    </MudText>
</MudPaper>
